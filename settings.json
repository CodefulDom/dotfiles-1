        // { "before": [",", "d"], "after": ["\"", "*", "d"] },
        // { "before": ["D"], "after": ["\"", "\"", "D"] }

        // { "before": ["p"], "after": ["\"", "*", "p"] },
        // { "before": ["P"], "after": ["\"", "*", "P"] },
        // { "before": ["y"], "after": ["\"", "*", "y"] },
        // { "before": ["Y"], "after": ["\"", "*", "y", "$"] }
