// Place your settings in this file to overwrite the default settings
{
    "editor.lineNumbers": "off",
    "editor.rulers": [100],
    "editor.insertSpaces": false,
    "editor.minimap.enabled": false,
    "editor.wordWrapColumn": 100,
    "editor.cursorStyle": "block",
    "editor.renderWhitespace": "all",
    "editor.renderControlCharacters": true,
    "workbench.editor.tabCloseButton": "off",
    "workbench.editor.enablePreview": false,
    "workbench.editor.revealIfOpen": true,
    "window.restoreWindows": "all",
    "window.restoreFullscreen": true,
    "window.title": "${dirty}${activeEditorMedium}${separator}${rootName}${separator}${appName}",
    "window.newWindowDimensions": "maximized",
    "files.exclude": {
        "**/.vs": true,
        "**/target": true
    },
    "files.hotExit": "onExitAndWindowClose",
    "explorer.openEditors.visible": 0,
    "terminal.integrated.shell.windows": "C:\\Users\\$USERNAME\\AppData\\Local\\Programs\\Git\\bin\\bash.exe",
    // Rust configuration
    "rust.docArgs": ["--no-deps"],
    "rust.mode": "rls",
    "rust.rls": {
        "executable": "rustup",
        "args": ["run", "nightly", "rls"],
        "useRustfmt": true
    },
    "rust.rustup": {
        "toolchain": "$RUST_TOOLCHAIN"
    },
    // Vim configuration
    "vim.leader": ",",
    "vim.useSystemClipboard": true,
    "vim.hlsearch": true,
    "vim.easymotion": true,
    "vim.textwidth": 100,
    "vim.disableAnnoyingNeovimMessage": true,
    "vim.otherModesKeyBindings": [],
    "vim.otherModesKeyBindingsNonRecursive": [
        {
            "before": ["Z", "Z"],
            "after": [],
            "commands": [
                {
                    "command": "workbench.action.files.save",
                    "args": []
                },
                {
                    "command": "workbench.action.closeActiveEditor",
                    "args": []
                }
            ]
        },
        { "before": ["Y"], "after": ["y", "$"] },
        // { "before": ["c"], "after": ["\"", "_", "c"] },
        // { "before": ["C"], "after": ["\"", "_", "C"] },
        // { "before": ["d"], "after": ["\"", "_", "d"] },
        // { "before": ["D"], "after": ["\"", "_", "D"] },
        // { "before": ["s"], "after": ["\"", "_", "s"] },
        // { "before": ["S"], "after": ["\"", "_", "S"] },
        // { "before": ["x"], "after": ["\"", "_", "x"] },
        // { "before": ["X"], "after": ["\"", "_", "X"] },
        // { "before": ["<leader>", "c"], "after": ["c"] },
        // { "before": ["<leader>", "C"], "after": ["C"] },
        // { "before": ["<leader>", "d"], "after": ["d"] },
        // { "before": ["<leader>", "D"], "after": ["D"] },
        // { "before": ["<leader>", "s"], "after": ["s"] },
        // { "before": ["<leader>", "S"], "after": ["S"] },
        // { "before": ["<leader>", "x"], "after": ["x"] },
        // { "before": ["<leader>", "X"], "after": ["X"] },
        { "before": ["[", "<space>"], "after": ["O", "<esc>"] },
        { "before": ["]", "<space>"], "after": ["o", "<esc>"] },
        {
            "before": [ "<leader>", "<space>" ],
            "after": [],
            "commands": [ { "command": ":nohl", "args": [] } ]
        }
    ],
    "vim.insertModeKeyBindings": [],
    "vim.insertModeKeyBindingsNonRecursive": [
        { "before": ["k", "j"], "after": ["<escape>"] }
    ]
}
